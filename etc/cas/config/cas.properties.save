## MONGO DB 
## MongoDB Setting
mongo.db:     parssodb
mongo.rs:     rs0
mongo.opts:   &ssl=false
mongo.creds:  mongoparsso:changeitAPA
mongo.hosts:  parsso.razi.ac.ir:27017, pars2.razi.ac.ir:27017

# The connection string, assembled
mongo.uri:      mongodb://${mongo.creds}@${mongo.hosts}/${mongo.db}?replicaSet=${mongo.rs}${mongo.opts}

# Service registry
cas.serviceRegistry.mongo.clientUri:    ${mongo.uri}
#cas.serviceRegistry.mongo.collection:   casServiceRegistryyyy
cas.serviceRegistry.mongo.collection=casServiceRegistry
cas.serviceRegistry.mongo.databaseName=parssodb

